<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/music_img"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="#dd000000"
                android:src="@drawable/mmusicplayer" />

            <TextView
                android:id="@+id/text_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="100px"
                android:layout_toRightOf="@+id/music_img"
                android:text="音乐"
                android:textColor="#ffff"
                android:textSize="54px" />

            <TextView
                android:id="@+id/music_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_music"
                android:layout_marginLeft="60px"
                android:layout_toRightOf="@+id/music_img"
                android:text="(N)"
                android:textColor="#ffff"
                android:textSize="36px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/photo_img"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="#dd000000"
                android:src="@drawable/file_img" />

            <TextView
                android:id="@+id/text_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="100px"
                android:layout_toRightOf="@+id/photo_img"
                android:text="图片"
                android:textColor="#ffff"
                android:textSize="54px" />

            <TextView
                android:id="@+id/photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_photo"
                android:layout_marginLeft="60px"
                android:layout_toRightOf="@+id/photo_img"
                android:text="(N)"
                android:textColor="#ffff"
                android:textSize="36px" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/vplayer_img"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="#dd000000"
                android:src="@drawable/vplayer" />

            <TextView
                android:id="@+id/text_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="100px"
                android:layout_toRightOf="@+id/vplayer_img"
                android:text="视频"
                android:textColor="#ffff"
                android:textSize="54px" />

            <TextView
                android:id="@+id/vedio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_video"
                android:layout_marginLeft="60px"
                android:layout_toRightOf="@+id/vplayer_img"
                android:text="(N)"
                android:textColor="#ffff"
                android:textSize="36px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/file_img"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="#dd000000"
                android:src="@drawable/ddocuments" />

            <TextView
                android:id="@+id/text_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="100px"
                android:layout_toRightOf="@+id/file_img"
                android:text="文档"
                android:textColor="#ffff"
                android:textSize="54px" />

            <TextView
                android:id="@+id/file_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_document"
                android:layout_marginLeft="60px"
                android:layout_toRightOf="@+id/file_img"
                android:text="(N)"
                android:textColor="#ffff"
                android:textSize="36px" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
